@{
    ViewData["Title"] = "Elige tu plan";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold">Elige tu plan para disfrutar de las películas</h2>

    <div class="row justify-content-center">

        <!-- Plan Básico -->
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-header bg-primary text-white fw-bold">Básico</div>
                <div class="card-body">
                    <h3>$5 / mes</h3>
                    <p>Acceso limitado a películas</p>
                    <form asp-controller="Cliente" asp-action="SeleccionarPlan" method="post">
                        <input type="hidden" name="plan" value="Básico" />
                        <button type="submit" class="btn btn-primary w-100">Elegir</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Plan Estándar -->
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-header bg-success text-white fw-bold">Estándar</div>
                <div class="card-body">
                    <h3>$10 / mes</h3>
                    <p>Películas HD + listas personalizadas</p>
                    <form asp-controller="Cliente" asp-action="SeleccionarPlan" method="post">
                        <input type="hidden" name="plan" value="Estándar" />
                        <button type="submit" class="btn btn-success w-100">Elegir</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Plan Premium -->
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-header bg-warning text-dark fw-bold">Premium</div>
                <div class="card-body">
                    <h3>$15 / mes</h3>
                    <p>Acceso ilimitado 4K sin anuncios</p>
                    <form asp-controller="Cliente" asp-action="SeleccionarPlan" method="post">
                        <input type="hidden" name="plan" value="Premium" />
                        <button type="submit" class="btn btn-warning w-100 text-dark">Elegir</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
