@model PROYECTOMOVIE.Controllers.EditarPerfilViewModel
@{
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    ViewData["Title"] = "Mi cuenta";
}

@section Styles {
    <link rel="stylesheet" href="~/css/perfil.css" />
}

<div class="main-content">
    <div class="perfil-container">
        <div class="perfil-card card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white text-center rounded-top-4">
                <h4 class="mb-0"><i class="bi bi-person-circle me-2"></i>Mi Perfil</h4>
            </div>
            <div class="card-body p-4">
                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-success">@ViewBag.Mensaje</div>
                }

                <form asp-action="Perfil" method="post">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Tu nombre" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label fw-semibold">Apellido</label>
                        <input asp-for="Apellido" class="form-control" placeholder="Tu apellido" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">Correo electrónico</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="tucorreo@ejemplo.com" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="PasswordNueva" class="form-label fw-semibold">Nueva contraseña</label>
                        <input asp-for="PasswordNueva" type="password" class="form-control" placeholder="Deja vacío si no deseas cambiarla" />
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/Cliente/Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save"></i> Guardar cambios
                        </button>
                    </div>
                </form>
            </div>

            <div class="text-center mt-3 mb-3 text-muted">
                <small>Último acceso: hoy</small>
            </div>
        </div>
    </div>
</div>

