@{
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    ViewData["Title"] = "Inicio Usuario";
}

<div class="container-fluid">
    <!-- Mensajes de éxito al seleccionar plan -->
    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["MensajeExito"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["PlanSeleccionado"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i>
            <strong>Plan activo:</strong> @TempData["PlanSeleccionado"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <h1 class="mb-4 fw-bold">Bienvenido a MovieZone</h1>
    <p class="text-muted mb-4">Explora, organiza y disfruta tus películas favoritas.</p>

    <!-- Cards tipo estadísticas -->
    <div class="row">
        <div class="col-md-6 col-lg-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">24</h4>
                        <p class="mb-0">Películas vistas</p>
                    </div>
                    <i class="bi bi-play-circle fs-1"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">5</h4>
                        <p class="mb-0">Listas creadas</p>
                    </div>
                    <i class="bi bi-list-ul fs-1"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-body d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">12</h4>
                        <p class="mb-0">Favoritos</p>
                    </div>
                    <i class="bi bi-heart fs-1"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">8</h4>
                        <p class="mb-0">Recomendaciones nuevas</p>
                    </div>
                    <i class="bi bi-stars fs-1"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Explora tu mundo cinematográfico</h5>
                </div>
                <div class="card-body">
                    <p>
                        Bienvenido a tu espacio personal de películas. Aquí podrás crear tus propias listas, marcar tus favoritos, 
                        recibir recomendaciones personalizadas y disfrutar de una experiencia única.
                    </p>
                    
        <!-- Mostrar información del plan activo -->
        @if (TempData["PlanSeleccionado"] != null)
        {
            <div class="mt-3 p-3 bg-light rounded">
                <h6><i class="bi bi-award me-2"></i>Tu Plan Actual</h6>
                <p class="mb-1"><strong>Plan:</strong> @TempData["PlanSeleccionado"]</p>
                @switch (TempData["PlanSeleccionado"]?.ToString())
                {
                    case "Básico":
                        <p class="mb-0 text-muted"><small>Acceso limitado a películas - $5/mes</small></p>
                        break;
                    case "Estándar":
                        <p class="mb-0 text-muted"><small>Películas HD + listas personalizadas - $10/mes</small></p>
                        break;
                    case "Premium":
                        <p class="mb-0 text-muted"><small>Acceso ilimitado 4K sin anuncios - $15/mes</small></p>
                        break;
                }
            </div>
        }
                </div>
            </div>
        </div>
    </div>
</div>