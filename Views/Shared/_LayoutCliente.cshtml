<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - WatchLenn</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Tu CSS personalizado -->
    <link rel="stylesheet" href="~/css/cliente.css">

    @RenderSection("Styles", required: false)

</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div>
            <div class="logo mb-4">
                <h3 class="mb-0">Watch<span>Lenn</span></h3>
                <small class="text-muted">Tu espacio de películas</small>
            </div>

            <nav class="nav flex-column">
                <a class="nav-link @(ViewData["Title"]?.ToString() == "Inicio Usuario" ? "active" : "")" href="/Cliente/Index">
                    <i class="bi bi-house-door me-2"></i> Inicio
                </a>
                <a class="nav-link @(ViewData["Title"]?.ToString() == "Mis Listas" ? "active" : "")" href="/Cliente/Listas">
                    <i class="bi bi-list-check me-2"></i> Mis Listas
                </a>
                <a class="nav-link @(ViewData["Title"]?.ToString() == "Películas" ? "active" : "")" href="/Cliente/Peliculas">
                    <i class="bi bi-film me-2"></i> Películas
                </a>
                <a class="nav-link @(ViewData["Title"]?.ToString() == "Mi cuenta" ? "active" : "")" href="/Cliente/Perfil">
                    <i class="bi bi-person me-2"></i> Mi Cuenta
                </a>
                <a class="nav-link text-danger" href="/Account/Logout">
                    <i class="bi bi-box-arrow-right me-2"></i> Cerrar Sesión
                </a>
            </nav>
        </div>

        <div class="user-info">
            <p class="mb-1">Cliente</p>
            <p class="mb-0">Disfruta tu suscripción</p>
        </div>
    </div>

    <!-- Contenido dinámico -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
